<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pl.com.stream.topfirma.partner.admin.repo.OperatorRepository">
	<select id="findAll" resultMap="Operator" parameterType="map"
		useCache="true" flushCache="false">
		SELECT * FROM OPERATOR LIMIT #{rows} OFFSET #{skip}
	</select>
	<select id="find" resultMap="Operator" parameterType="long">
		SELECT * FROM OPERATOR WHERE ID = #{id}
	</select>

	<resultMap type="pl.com.stream.topfirma.partner.admin.repo.Operator"
		id="Operator">
		<id property="id" column="ID" />
		<result property="login" column="EMAIL" />
		<result property="firstName" column="FIRST_NAME" />
		<result property="lastName" column="LAST_NAME" />
	</resultMap>
	<cache eviction="FIFO" flushInterval="60000" size="512" readOnly="true" />
</mapper>